extends layouts/main

block style
  link(rel='stylesheet', href='css/watch.css')

block content
  div(class='nav-bar')
    nav
      h1(class='left') 
        a(href='/') Hyperflora
      h2(class='center')
        a(href='https://www.youtube.com/watch?v='+video.id, target='_blank') Video Title
      a(class='next right', href='/watch') Next Video
    div(class='nav-zone')
      
  iframe(id='video-player', src='https://www.youtube.com/embed/'+video.id+'?autoplay=1&showinfo=0&iv_load_policy=3', frameborder='0')

block script
  script(src='js/player.js')
