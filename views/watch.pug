extends layouts/main

block style
  link(rel='stylesheet', href='css/watch.css')

block content
  div(class='nav-bar')
    nav
      h1(class='left') 
        a(href='/') Hyperflora
      h2(class='center')
        if video.host == "youtube"
          a(href='https://www.youtube.com/watch?v='+video.url, target='_blank')= video.title
        else
          a(href='https://www.vimeo.com/'+video.url, target='_blank')= video.title
      a(class='next right', href='/watch') Next Video
    div(class='nav-zone')
      
  if video.host == "youtube"
    iframe(id='video-player', src='https://www.youtube.com/embed/'+video.url+'?autoplay=1&showinfo=0&iv_load_policy=3', frameborder='0')
  else
    iframe(id='video-player', src='https://player.vimeo.com/video/'+video.url+'?autoplay=1', frameborder='0')

block script
  script(src='js/player.js')
