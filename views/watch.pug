extends layouts/main

block style
  link(rel='stylesheet', href='/css/watch.min.css')

block content
  div(class='nav-bar')
    nav
      h1(class='left') 
        a(href='/') Hyperflora
      h2(class='center')
        a(href='https://www.youtube.com/watch?v=' + videoId, target='_blank')= title
      if channel
        a(class='next right', href='/watch?channel=' + channel) Next Video
      else
        a(class='next right', href='/watch') Next Video
    div(class='nav-zone')
      
  iframe(id='video-player', src='https://www.youtube.com/embed/'+videoId+'?autoplay=1&showinfo=0&iv_load_policy=3&controls=0', frameborder='0', data-id=objId)


block script
  script(src='/js/player.js')
