extends layouts/main

block style
  link(rel='stylesheet', href='/css/home.min.css')

block content
  div(class='kal_main')
    div(class='kal_cont')
      - var n = 0
      while n < 12
        div(class='ks s'+((n++)+1))
          div(class='ksc')
    div(class='grad_overlay')

  section(class='content')
    h1 Hyperflora

    div(class='select') Select a channel
    ul(class='categories')
      li(class='everything')
        a(href='/watch')
          span Everything
      div(class='grid')
        li(class='music')
          a(href='/watch?channel=music')
            span Music
        li(class='animation')
          a(href='/watch?channel=animation')
            span Animation
        li(class='experimental')
          a(href='/watch?channel=experimental')
            span Experimental
        li(class='discovery')
          a(href='/watch?channel=discovery')
            span Discovery
        li(class='comedy')
          a(href='/watch?channel=comedy')
            span Comedy
        li(class='nature')
          a(href='/watch?channel=nature')
            span Nature
        li(class='food')
          a(href='/watch?channel=food')
            span Food
        li(class='nightmare')
          a(href='/watch?channel=nightmare')
            span Nightmare
      //-
        Channel ideas:
        - music
        - animation
        - food
        - discovery
        - experimental
        - comedy
        - nature
            
    a(href='/submit', class='submit') Submit a video

block script
  script(src='/js/home.js')
