extends layouts/main

block content
  h2(style='margin: 30px;') Videos in Hyperflora
  ul(class='list')
    each vid in videos
      if (vimeo && vid.host == 'vimeo')
        li
          a(href='https://vimeo.com/' + vid.url, target='_blank')
            h3= vid['title']
      else if (!vimeo && vid.host == 'youtube')
        li
          a(href='http://www.youtube.com/watch?v=' + vid.url, target='_blank')
            h3= vid['title']
